{
  "name": "rollup-plugin-ts",
  "version": "0.2.0",
  "description": "A Typescript Rollup plugin that bundles declarations and respects Babel and Browserslist configurations.",
  "repository": "git+https://github.com/rx-ts/rollup-plugin-ts.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "engines": {
    "node": ">=9.3.0"
  },
  "main": "lib",
  "files": [
    "lib"
  ],
  "keywords": [
    "rollup",
    "typescript",
    "declaration",
    "declarations",
    "bundling",
    "merging",
    "treeshaking",
    "plugin",
    "babel",
    "browserslist"
  ],
  "scripts": {
    "build": "tsc -b src",
    "lint:es": "eslint . --ext js,md,ts,tsx -f friendly",
    "lint:ts": "tslint -p . -t stylish",
    "lint:tsc": "tsc -P . --incremental false --noEmit",
    "lint": "run-p lint:*",
    "test": "jest",
    "type-coverage": "type-coverage --cache --ignore-catch --detail --ignore-files *.d.ts --strict"
  },
  "peerDependencies": {
    "rollup": "^1.x",
    "typescript": "^3.x"
  },
  "dependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "@wessberg/browserslist-generator": "^1.0.24",
    "@wessberg/stringutil": "^1.0.18",
    "babel-preset-proposal-typescript": "^1.4.1",
    "browserslist": "^4.7.0",
    "find-up": "^4.1.0",
    "magic-string": "^0.25.3",
    "mkdirp": "^0.5.1",
    "resolve": "^1.12.0",
    "rollup-pluginutils": "^2.8.2",
    "slash": "^3.0.0",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@1stg/babel-preset": "^0.7.0",
    "@1stg/commitlint-config": "^0.1.0",
    "@1stg/eslint-config": "^0.12.10",
    "@1stg/husky-config": "^0.3.0",
    "@1stg/lint-staged": "^0.7.4",
    "@1stg/prettier-config": "^0.2.0",
    "@1stg/remark-config": "^0.2.1",
    "@1stg/rollup-config": "^0.9.5",
    "@1stg/tsconfig": "^0.5.1",
    "@1stg/tslint-config": "^0.3.3",
    "@commitlint/cli": "^8.2.0",
    "@types/babel__core": "^7.1.3",
    "@types/browserslist": "^4.4.0",
    "@types/jest": "^24.0.18",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^12.7.5",
    "@types/prettier": "^1.18.2",
    "@types/resolve": "^0.0.8",
    "eslint": "^6.4.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "rollup": "^1.21.4",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "type-coverage": "^2.3.0",
    "typescript": "^3.6.2"
  },
  "typeCoverage": {
    "atLeast": 99.88
  }
}
